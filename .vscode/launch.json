{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FastAPI Server",
      "type": "python",
      "request": "launch",
      "program": "main.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": []
    },
    {
      "name": "Debug FastAPI Server",
      "type": "python",
      "request": "launch",
      "program": "main.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "DEBUG": "True"
      },
      "args": [
        "--reload"
      ]
    }
  ]
}